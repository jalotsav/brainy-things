<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_5jdp"
        android:layout_marginLeft="@dimen/_8jdp"
        android:layout_marginRight="@dimen/_8jdp"
        android:layout_marginTop="@dimen/_5jdp"
        app:cardCornerRadius="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_116jdp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/blackTrans80" />

                <ImageView
                    android:id="@+id/imgvw_recylrvw_item_devices_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/app_name"
                    android:padding="@dimen/_8jdp"
                    android:src="@drawable/drwbl_slctr_light_bulb_onoff" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/_10jdp"
                android:paddingLeft="@dimen/_8jdp"
                android:gravity="center_vertical"
                android:paddingRight="@dimen/_8jdp"
                android:paddingTop="@dimen/_10jdp">

                <View
                    android:id="@+id/vw_recylrvw_item_devices_onoffindicator"
                    android:layout_width="@dimen/_8jdp"
                    android:layout_height="@dimen/_8jdp"
                    android:background="@drawable/drwbl_slctr_shape_round_redgreen" />

                <TextView
                    android:id="@+id/tv_recylrvw_item_devices_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_8jdp"
                    android:layout_marginStart="@dimen/_8jdp"
                    android:textColor="@color/colorPrimaryBlue"
                    android:textSize="@dimen/_14jdp"
                    tools:text="Main Light" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>